    <script>
        function validateForm() {
            var categoryName = document.getElementById('product_name').value.trim();
            var description = document.getElementsByName('Description')[0].value;
    
        
            if (categoryName === '') {
                alert('Name cannot be empty');
                return false;
            }
    
        
    
            return true; 
        }
        

    const searchInput = document.getElementById('searchInput');
    const tableRows = document.querySelectorAll('tbody tr');

    searchInput.addEventListener('input', function () {
        const searchTerm = searchInput.value.toLowerCase();

        tableRows.forEach(row => {
            const userName = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
            row.style.display = userName.includes(searchTerm) ? '' : 'none';
        });
    });


               var actionButtons = document.querySelectorAll('.actionButton');

    
               actionButtons.forEach(function (actionButton) {
               actionButton.addEventListener('click', function (event) {
            
               event.preventDefault();

            
               var actionType = actionButton.classList.contains('btn-danger') ? 'block' : 'unblock';

        
                Swal.fire({
                title: 'Are you sure?',
                text: `Do you want to ${actionType} this category?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: `Yes, ${actionType} it!`
              
            }).then((result) => {
                
                if (result.isConfirmed) {
                    window.location.href = actionButton.getAttribute('href');
                }
            });
        });
    });

    var deleteButtons = document.querySelectorAll('.deleteButton');


deleteButtons.forEach(function (deleteButton) {
    deleteButton.addEventListener('click', function (event) {
        
        event.preventDefault();

        
        Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to delete this category. This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            
            if (result.isConfirmed) {
                window.location.href = deleteButton.getAttribute('href');
            }
        });
    });
});







//offer  modal


function openModal(cataId) {
    var modal = document.getElementById("myModal");


var productIdInput = modal.querySelector('.cataInput');
productIdInput.value = cataId 

modal.style.display = "flex";


}




function closeModal() {
    var modal = document.getElementById("myModal");
    modal.style.display = "none";
}





function yourButtonFunction(offerId) {
    var modal = document.getElementById("myModal");

    
    // var offerId = modal.querySelector('.offerIdInput').value;
    var cataId = modal.querySelector('.cataInput').value;

    



    fetch('/admin/cataofferapply', {
        method: 'POST', 
        headers: {
            'Content-Type': 'application/json', 
        },
        body: JSON.stringify({
            offerId: offerId,
            cataId: cataId,
        }),
    })
    .then(response => response.json())
    .then(data => {
        if(data.success) {
          
            
            Swal.fire({
            title: 'Success!',
            text: data.message,
            icon: 'success',
            showCancelButton: false,
            showConfirmButton: false,
            timer: 1000,
   
        })
            .then(() => {
            
                location.reload();
            });
        } else {
            Swal.fire({
            title: 'Error!',
            text: data.message,
            icon: 'error',
            showCancelButton: false,
            showConfirmButton: false,
            timer: 1000,
        
        })

            .then(() => {
            
            location.reload();
        });
        }
        
    })
    .catch(error => {
       
        Swal.fire({
            title: 'Error!',
            text: 'Failed to apply offer',
            icon: 'error',
            showCancelButton: false,
            showConfirmButton: false,
            timer: 1000,
            
        })
        .then(() => {
            
            location.reload();
        });
        console.error('Error:', error);
    });
}








//remove offer

function removeoffer(cataId) {

fetch('/admin/cataremoveoffer', {
    method: 'POST', 
    headers: {
        'Content-Type': 'application/json', 
    },
    body: JSON.stringify({
        id: cataId
    }),
})
.then(response => response.json())
.then(data => {
    if(data.success) {
      
        
        Swal.fire({
        title: 'Success!',
        text: data.message,
