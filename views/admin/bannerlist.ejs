<script>
   document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.deleteButton');

    deleteButtons.forEach(button => {
        button.addEventListener('click', function (event) {
            event.preventDefault();

            const bannerId = button.getAttribute('data-id');

            
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this banner?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
            
                if (result.isConfirmed) {
                    deleteBanner(bannerId);
                }
            });
        });
    });
});

async function deleteBanner(bannerId) {
    try {
        const response = await fetch(`/admin/deletebanner?id=${bannerId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
                
            },
        });

        if (response.ok) {
           
            const deletedRow = document.querySelector(`[data-id="${bannerId}"]`).closest('tr');
            deletedRow.remove();

            Swal.fire({
                title: 'Deleted!',
                text: 'The banner has been deleted.',
                icon: 'success',
                allowOutsideClick: false,
                showConfirmButton: false
            });

           
            setTimeout(() => {
                Swal.close();
            }, 1500);
        } else {
       
            console.error(`Error deleting banner: ${response.statusText}`);

     
            Swal.fire('Error!', 'Failed to delete the banner.', 'error');
        }
    } catch (error) {
        console.error('Error deleting banner:', error.message);

        Swal.fire('Error!', 'An unexpected error occurred.', 'error');
    }
}



</script>








