    <script>
 const selectElements = document.querySelectorAll('.mySelect');


selectElements.forEach(selectElement => {
    selectElement.addEventListener('change', function() {
        handleSelectChange(this);
    });
});
    function handleSelectChange(selectElement) {
        try {
            const status = selectElement.value;
            const orderId = selectElement.getAttribute('data-order-id');
            const productIndex  = selectElement.getAttribute('data-product-index');

            if (!orderId) {
                throw new Error('Order ID not found in select element.');
            }

            console.log('Selected Order ID:', orderId);
            console.log('Selected Status:', status);

            statuschange(status, orderId,productIndex);
        } catch (error) {
            console.error('Error in handleSelectChange:', error.message);
        }
    }



  async  function statuschange(status,orderId,productIndex){
        //console.log(orderId)

        try {
            

            const response= await fetch('/admin/orderstatus',{

                method:'POST',
                headers: {
                'Content-Type': 'application/json',
            },
            body:JSON.stringify({status,orderId,productIndex})
            })

            if(response.ok){

                const data= await response.json()
                console.log(data)
                if(data.success){


                    location.reload();
                    
                console.log(data.message)
                }
                else{
                    Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message||'updation failed',
                });
                    console.log(data.message)
                }

            }
            else{

                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message||'updation failed',
                });
            }


        } catch (error) {
            Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message||'updation failed',
                });
            console.log(error.message)
            
        }
       
    }

// RETURN HANDLING----------------------------------------------------
document.querySelectorAll(".returnButton").forEach(function(button) {
    button.addEventListener('click', function() {
        const orderId = this.getAttribute('data-order-id');
        const productIndex = this.getAttribute('data-product-index');
        const reason = this.getAttribute('data-product-reason');

        console.log(orderId);
        console.log(productIndex);
        console.log(reason);

        Swal.fire({
            title: 'Return Reason',
            text: reason,
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Proceed',
            customClass: {
                popup: 'my-custom-size',
            },
        }).then((result) => {
            if (result.isConfirmed) {
                // Proceed with the fetch request
                fetch('/admin/returnrequest', {
                    method: 'POST',
                    headers: {
                        'Content-type': 'application/json',
                    },
                    body: JSON.stringify({ orderId, productIndex, reason }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: data.message,
                            timer: 1000, 
                            showConfirmButton: false,
                            customClass: {
                    popup: 'animate__animated animate__fadeOut',
                },
                        })
                        .then(() => {
                            location.reload(); 
                        });
                       



                        console.log('Request successful:', data.message);
                    } else {
                        // Handle failure
                        console.log('Request failed:', data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error.message);
                });
            }
        });
    });
});



    </script>


