                            </thead>
                           
                            <% if (locals.order && locals.order.length > 0) { %>

                                <tbody>
                            
                                    <% order.forEach((order, index) => { %>
                                        <% order.products.forEach((product, productIndex) => { %>
                                            <tr>
                                                
                                                    <!-- Empty cells for subsequent product rows -->
                                                    <td><%= index + 1 %></td>
                                                    <td><b><%= order.userid %></b></td>
                                                    <td><%= product.name %>  <%= product.quantity %> x <%= product.price %></td>
                                                    <td>₹<%= product.totalprice %></td>
                                                    <td><%= order.payment %></td>
                            
                                                <!-- Display status for each product individually -->
                                                <td>
                                                    <ul>
                                                        <span class="badge rounded-pill <%= product.status === 'Placed' ? 'alert-primary' :
                                                            (product.status === 'Cancelled' ? 'alert-warning' :
                                                                (product.status === 'Delivered' ? 'alert-success' :
                                                                    (product.status === 'Shipped' ? 'alert-info' :
                                                                        (product.status === 'Out for delivery' ? 'alert-success' :
                                                                            (product.status === 'Return Request' ? 'alert-danger' :
                                                                                (product.status === 'Return' ? 'alert-danger' : 'alert-dark')))))) %>">
                                                            <%= product.status %>
                                                        </span>
                                                    </ul>
                                                </td>
                            
                                                <%  if(product.status==='Return Request') { %>

                                                   <td class="text-end"><span class="btn btn-md rounded font-sm returnButton" id="requestButton" data-order-id="<%= order.id %>" data-product-index="<%= productIndex %>" data-product-reason="<%= product.return %>"> Request pending</span></td> 
                                               <% }  else{ %>

                                                <td class="text-end">
                                                    <select class="btn btn-md rounded font-sm mySelect" data-order-id="<%= order.id %>" data-product-index="<%= productIndex %>">
                                                        <option value="" disabled selected>Update Status</option>
                                                        <option value="Placed">Placed</option>
                                                        <option value="Cancelled">Cancelled</option>
                                                        <option value="Delivered">Delivered</option>
                                                        <option value="Shipped">Shipped</option>
                                                        <option value="Out for delivery">Out for delivery</option>
                                                    </select>
                                                </td>

                                                    <% }%>
                                                
                                            </tr>
                                        <% }); %>
                                    <% }); %>
                            
