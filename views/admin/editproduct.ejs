    <form  action="/admin/editproduct" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
    <section class="content-main">
        <div class="row">
            <div class="col-9">
                <div class="content-header">
                    <h2 class="content-title">Edit  Product</h2>
                    <div>
                        
                        <button class="btn btn-md rounded font-sm hover-up">Update Product</button>
                    </div>
                </div>
            </div>
           
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-body">
                       
                        <% product.forEach((item)=>{ %>
                            <input type="hidden" value='<%= item.image.length %>' id="currentImageLength">
                            <div class="mb-4">
                                <label for="product_title" class="form-label">Product Name</label>
                                <input type="text"  class="form-control" id="product_title" name="name" value='<%= item.name %>' pattern="[A-Za-z\s]+" title="Only letters and spaces are allowed"required>
                            </div>
                            
                            <div class="row gx-3">

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Gender</label>
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-check">
                                                
                                                <input class="form-check-input" type="radio" name="gender" value="male" id="genderMale" <%= item.gender === 'male' ? 'checked' : '' %>>
                                                <label class="form-check-label" for="genderMale">Male</label>
                                            </div>
                                        </div>
                                        
                                        <div class="col">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender" value="female" id="genderFemale" <%= item.gender === 'female' ? 'checked' : '' %>>
                                                <label class="form-check-label" for="genderFemale">Female</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <input type="hidden" name="id" value="<%= item._id %>">
                                <div class="col-md-4  mb-3">
                                    <label for="product_color" class="form-label">Color</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="color" name="color" value='<%= item.color %>'required pattern="[A-Za-z\s]+" title="Only letters are allowed">
                                </div>
                                <!-- <div class="col-md-4  mb-3">
                                    <label for="product_size" class="form-label">Size</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="size"name="size"  value='<%= item.size %>' required>
                                </div> -->
                                <div class="col-md-4 mb-3">
                                    <label for="product_size" class="form-label">Size</label>
                                    
                                    <!-- Display dropdown for editing existing size -->
                                    <select class="form-control" id="product_size" name="size" required>
                                        <% for (var i = 4; i <= 10; i++) { %>
                                            <option value="<%= i %>" <%= item.size == i ? 'selected' : '' %>><%= i %></option>
                                        <% } %>
                                    </select>
                                </div>
                                
                            </div>
                            <div class="mb-4">
                                <label for="product_brand" class="form-label">Brand</label>
                                <input type="text" placeholder="Type here" class="form-control" id="product_brand" name="brand"  value='<%= item.brand %>'required>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div>
                                <label class="form-label">Description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4"name="description"  required><%= item.description %></textarea>
                            </div>
                        </div>
                    </div> <!-- card end// -->
                    <!-- <div class="card mb-4">
                        <div class="card-body">
                            <div>
                                <label class="form-label">Images</label>
                                
                                <input type="file" class="form-control" name="image" accept="image/*" required multiple >
                            </div>
                        </div>
                    </div>  -->

               

                        <!-- card end// -->
            </div>
            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">Price</label>
                            <input type="text" placeholder="Type here" class="form-control" name="price"  value='<%= item.price %>'  pattern="[0-9]+(\.[0-9]+)?" title="Only numbers and spaces are allowed" required >
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Quantity</label>
                            <input type="text" placeholder="Type here" class="form-control" name="quantity" value='<%= item.quantity %>'   pattern="[0-9]+(\.[0-9]+)?" title="Only numbers and spaces are allowed" required >
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Status</label>
                            <select class="form-select" name="status">
                            <option value="Active" <%= item.status === 'Active' ? 'selected' : '' %>>Active</option>
                            <option value="Blocked" <%= item.status === 'Blocked' ? 'selected' : '' %>>Blocked</option>
                            </select>
                        </div>
                        <h5 class="mb-3">Categories</h5>
                        <select class="form-select" id="product-cat" name="category">
                            <% categories.forEach((cata) => { %>
                            
                                <option value='<%= cata._id.toString() %>' <%= item.category && item.category._id && item.category._id.toString() === cata._id.toString() ? 'selected' : '' %>>
                                    <%= cata.Category %>
                                </option>
                            <% }) %>
                        </select>
                       <!-- Inside your EJS template -->

                       <% if (item.image.length < 4) { %>
                        <div class="mb-4">
                            <label class="form-label">New Image</label>
                            <input type="file" class="form-control" name="newImages" accept="image/*" multiple id="newImagesInput">
                            
                        </div>
                    <% } %>
                    
                     <!-- <% if (item.image.length >= 4) { %>
                        <input type="file" disabled class="form-control" ...>
                      <% } else { %>
                        <input type="file" class="form-control" ...>
                     <% } %> -->
                   
                     <div class="mb-4">
                        <label class="form-label">Replace All Images</label>
                        <input type="file" class="form-control" name="replaceImages" accept="image/*" multiple id="replaceImagesInput">
                    </div>
                    <% if (locals.message) { %>
                        <p id="alert"><%= message %></p>
                    <% } %>

                    <div class="mb-4">
                        <label class="form-label">All Images</label>
                        <% item.image.forEach((image, index) => { %>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <img src="/images/<%= image %>" alt="Product Image" style="width: 30px; height: 30px; margin-right: 5px;">
                                <a href="/admin/deleteimage?index=<%= index %>&amp;id=<%=item._id %>" class="text-danger deleteButton" >Delete</a>
                            </div>
                        <% }) %>
                    </div>


                        </div>

                    </div>
                    <% }) %> 
                </div> 
            </div>
        </div>
    </section>
