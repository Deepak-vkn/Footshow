<script>
   function validateForm() {
        var productName = document.getElementById('product_title').value;
        var gender = document.querySelector('input[name="gender"]:checked');
        var color = document.getElementById('product_color').value;
        var size = document.getElementById('product_size').value;
        var brand = document.getElementById('product_brand').value;
        var description = document.getElementsByName('description')[0].value;
        var price = document.getElementsByName('price')[0].value;
        var status = document.querySelector('.form-select').value;
       
       
        var images = document.getElementsByName('image')[0].files;


        if (productName.trim() === '') {
            alert('Product Name cannot be empty');
            return false;
        }

    
        if (!gender) {
            alert('Please select a gender');
            return false;
        }

        
        if (color.trim() === '') {
            alert('Color cannot be empty');
            return false;
        }

        
        if (size.trim() === '') {
            alert('Size cannot be empty');
            return false;
        }

    
        if (brand.trim() === '') {
            alert('Brand cannot be empty');
            return false;
        }

    
        if (description.trim() === '') {
            alert('Description cannot be empty');
            return false;
        }


        if (isNaN(parseFloat(price)) || !isFinite(price)) {
            alert('Please enter a valid price');
            return false;
        }


        if (status.trim() === '') {
            alert('Please select a status');
            return false;
        }

       

        
        if (images.length === 0) {
            alert('Please select at least one image');
            return false;
        }
        
    }
     
     document.getElementById('newImagesInput').addEventListener('change', function () {
        var currentImageLength = parseInt(document.getElementById('currentImageLength').value);
        
            var maxImages = 4;
            var selectedImages = this.files.length;

        
            if (selectedImages> maxImages) {
               
        
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'You can only select up to 4 images!',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });

            
                this.value = '';
            }
            else if(selectedImages+currentImageLength>maxImages) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'You can only select up to 4 images!',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });

        
                this.value = '';
                
            }
        });
        document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('replaceImagesInput').addEventListener('change', function () {
            var maxImages = 4;
            var selectedImages = this.files.length;
            

            if (selectedImages > maxImages) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'You can only select up to 4 images!',
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'OK'
                });

                this.value = '';
            }
        });
    });
    var deleteButtons = document.querySelectorAll('.deleteButton');

    
    deleteButtons.forEach(function (deleteButton) {
        deleteButton.addEventListener('click', function (event) {
        
            event.preventDefault();

    
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this item?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
        
                if (result.isConfirmed) {
                    window.location.href = deleteButton.getAttribute('href');
                }
            });
        });
    });
    
</script>
