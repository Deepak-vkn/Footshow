                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4  mb-3">
                                <label for="product_color" class="form-label">Color</label>
                                <input type="text" placeholder="Type here" class="form-control" id="product_color" name="color" required pattern="[A-Za-z\s]+" title="Only letters are allowed">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="product_size" class="form-label">Size</label>
                                <select class="form-control" id="product_size" name="size" required>
                                    <option value="" selected disabled>Select Size</option>
                                    <% for (var i = 4; i <= 10; i++) { %>
                                        <option value="<%= i %>"><%= i %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="product_brand" class="form-label">Brand</label>
                            <input type="text" placeholder="Type here" class="form-control" id="product_brand" name="brand"required>
                        </div>
                    </div>
                </div> <!-- card end// -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">Description</label>
                            <textarea placeholder="Type here" class="form-control" rows="4"name="description" required></textarea>
                        </div>
                    </div>
                </div> <!-- card end// -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">Images</label>
                            <input type="file" class="form-control" name="image" accept="image/*" required multiple id="addimage">
                        </div>
                    </div>
                </div> <!-- card end// -->
