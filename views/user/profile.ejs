    async function showReturnAlert(index, orderId) {
    try {
        const result = await Swal.fire({
            title: 'Return Order',
            html: '<input type="text" id="returnReason" class="swal2-input custom-input" placeholder="Enter reason for return">',
            showCancelButton: true,
            confirmButtonText: 'Submit',
            cancelButtonText: 'Cancel',
            focusConfirm: false,
            preConfirm: () => {
                const returnReason = document.getElementById('returnReason').value;
                if (!returnReason) {
                    Swal.showValidationMessage('Please enter the reason for return');
                }
                return returnReason;
            },
            allowOutsideClick: () => !Swal.isLoading(),
            customClass: {
                input: 'custom-input',
                confirmButton: 'custom-button',
                cancelButton: 'custom-button'
            }
        });

        if (result.isConfirmed) {
            const reason = result.value;

            await Swal.fire({
                title: 'Return submitted!',
                text: `Reason: ${reason}`,
                icon: 'success',
                timer: 1000,
                showConfirmButton: false,
                customClass: {
                    popup: 'animate__animated animate__fadeOut',
                },
            });

            const response = await fetch('/returnproduct', {
                method: 'POST',
                headers: {
                    'Content-type': 'application/json'
                },
                body: JSON.stringify({
                    reason,
                    index,
                    orderId
                })
            });

            if (response.ok) {
                const data = await response.json();
                console.log('reached');

                if (data.success) {
                    console.log('success');
                    location.reload();
                   // window.location.href = '/profile';
                } else {
                    console.log('failed', data.message || 'No specific error message');
                }
            } else {
                console.error(`HTTP error! Status: ${response.status}`);
            }
        }
    } catch (error) {
        console.error('Error during fetch:', error);
    }
