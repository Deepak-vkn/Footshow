    <% if (locals.cart) { %>
    <script>

       

    document.addEventListener('DOMContentLoaded', function () {
    const quantityInputs = document.querySelectorAll('.cart-product-quantity input[type="number"]');
    
    quantityInputs.forEach(function (quantityInput) {
        quantityInput.addEventListener('input', async function () {
            const quantity = parseInt(this.value, 10);
            
            // Accessing the parent element of the current input
            const parentElement = this.closest('.cart-product-quantity');
            
            // Finding the associated productid input within the parent element
            const productIdInput = parentElement.querySelector('.productid');
            
            // Getting the productid value
            const productId = productIdInput.value;
            //const id='<%= locals.cart._id %>'
            var id = '<%= id %>'

            try {
                const response = await fetch(`/cartupdate?id=${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-type': 'application/json',
                    },
                   body:JSON.stringify({productId,quantity})
                });
    
            if(response.ok){
                const data=  await response.json()
                console.log('Received Data:', data);
                
                if(data.success){
                   


                     //for updating product's total price
                        const selector = `td.total-col[data-productid="${productId}"]`;
                        //console.log(data.editedProduct)
                        const productTotalElement = document.querySelector(selector)
                        //console.log(data.editedProduct.totalprice)
                        productTotalElement.textContent = data.editedProduct.totalprice
                        //console.log(productTotalElement)

                    // for updating    totol price 
                    const totalElement = document.querySelector('.summary-total td:last-child');
                    
                    totalElement.textContent =data.total               

                    const subtotalElement = document.querySelector('.summary-subtotal td:last-child');
                    subtotalElement.textContent = data.total
                    
      
                    
                }
                else{
                    showErrorAlert(data.message || 'Failed to update quantity');
                    console.error(data.message)

                }
            }

            else{
                showErrorAlert(data.message || 'Failed to update quantity');
                console.error(data.message)

            }
               
            } catch (error) {
                showErrorAlert(data.message || 'Failed to update quantity');
                console.error('Error updating quantity:', error);
            }
        });
    });
});


function showErrorAlert(message) {
    Swal.fire({
        title: 'Error',
        text: message || 'An unexpected error occurred. Please try again later.',
        icon: 'error',
        buttons: {
            confirm: {
                text: 'OK',
                value: true,
                visible: true,
                className: 'btn btn-danger',
                closeModal: true,
            },
        },
    });
}


